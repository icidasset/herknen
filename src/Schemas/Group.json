{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://herknen.fission.app/schemas/Group.json",
  "title": "Group",
  "description": "A group of units",
  "type": "object",
  "properties": {
    "icon": {
      "description": "The identifier of the associated icon",
      "type": "string"
    },
    "label": {
      "description": "Label of this group",
      "type": "string"
    },
    "units": {
      "description": "Units belonging to this group",
      "type": "array",
      "items": { "$ref": "Unit.json" }
    }
  },
  "required": [ "icon", "label", "units" ]
}
